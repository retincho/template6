<!-- Breadcrumbs-->
<div class="p-2">
  <ol class="breadcrumb mb-0">
    <li class="breadcrumb-item">
      <a href="/">Inicio</a>
    </li>
    <li class="breadcrumb-item active"><a href="<%= provinces_path%>"> <%= Province.model_name.human(count: 2)%></a></li>
  </ol>
</div>
<div class="card mx-auto my-2">
  <div class="card-header">
    <i class="fa fa-table"></i>
    <%= Province.model_name.human(count: 2).titleize%>
  </div>
  <div class="card-body">
    <table class="datatable responsive nowrap table table-hover">
      <thead>
        <tr>
          <th><%= Province.human_attribute_name("iso_id").titleize%></th>
          <th><%= Province.human_attribute_name("name").titleize%></th>
          <th><%= Province.human_attribute_name("national_id").titleize%></th>
          <th><%= Province.human_attribute_name("country").titleize%></th>
          <th><%= Province.human_attribute_name("complete_name").titleize%></th>
          <th><%= Province.human_attribute_name("iso_name").titleize%></th>
          <th><%= Province.human_attribute_name("lat").titleize%></th>
          <th><%= Province.human_attribute_name("lon").titleize%></th>
          <th>Opciones</th>
        </tr>

      </thead>

      <tbody>
        <% @provinces.each do |province| %>
          <tr>
              <td><%=province.iso_id%></td>
              <td><%=province.name%></td>
              <td><%=province.national_id%></td>
              <td><%=province.country%></td>
              <td><%=province.complete_name%></td>
              <td><%=province.iso_name%></td>
              <td><%=province.lat%></td>
              <td><%=province.lon%></td>
            <td>
              <%= link_to((fa_icon "eye"), province) %>
              <%= link_to((fa_icon "edit"), edit_province_path(province)) %>
              <%= link_to((fa_icon "trash"), province, method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminar?' }) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>

<div class="actions">
  <%= link_to 'Volver', :back, class: "btn btn-primary" %>
  <%= link_to 'Crear ' + Province.model_name.human.titleize, new_province_path, class: 'btn btn-success' %>
</div>
<!-- End Scaffold -->
