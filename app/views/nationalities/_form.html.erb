<%= form_with(model: nationality, local: true) do |form| %>
  <% if nationality.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(nationality.errors.count, "error") %> prohibited this nationality from being saved:</h2>

      <ul>
      <% nationality.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>  
      </ul>
    </div>
  <% end %>
    <div class="mb-3">
      <strong><%= form.label :code, Nationality.human_attribute_name("code").titleize, class:"form-label"%></strong>
      <%= form.text_field :code, class:"form-control" %>
    </div>
    <div class="mb-3">
      <strong><%= form.label :name, Nationality.human_attribute_name("name").titleize, class:"form-label"%></strong>
      <%= form.text_field :name, class:"form-control" %>
    </div>
    <div class="mb-3">
      <strong><%= form.label :country, Nationality.human_attribute_name("country").titleize, class:"form-label"%></strong>
      <%= form.collection_select :country_id, Country.all, :id, :name, {prompt: "Seleccionar"}, {class: "select2 form-control"}  %>
    </div>

  <div class="actions">
    <%= link_to 'Volver', :back, class: "btn btn-primary" %>
    <%= form.submit class: "btn btn-success" %>
<% end %>
